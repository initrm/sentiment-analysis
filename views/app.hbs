<!-- App -->
<div class="container">
    <div class="row mt-2">
        <div class="col-12">

            <!-- Tab Selectors -->
            <ul class="nav justify-content-center nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-simple-training-tab" data-bs-toggle="pill" data-bs-target="#pills-simple-training" type="button" role="tab" aria-controls="pills-simple-training" aria-selected="true">Simple Training</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-guided-training-tab" data-bs-toggle="pill" data-bs-target="#pills-guided-training" type="button" role="tab" aria-controls="pills-guided-training" aria-selected="false">Guided Training</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-automatic-classification-tab" data-bs-toggle="pill" data-bs-target="#pills-automatic-classification" type="button" role="tab" aria-controls="pills-automatic-classification" aria-selected="false">Automatic Classification</button>
                </li>
            </ul>

            <!-- Tabs -->
            <div class="tab-content" id="pills-tabContent">

                <!-- Simple Training Tab -->
                <div class="tab-pane fade show active" id="pills-simple-training" aria-labelledby="pills-simple-training-tab" role="tabpanel">
                    <div class="row">

                        <!-- Selected Text Card -->
                        <div id="st-selected-text-input-container" class="col-12 mb-2">
                            <h5 class="text-center">Selected Text:</h5>
                            <textarea name="st-selected-text" id="st-selected-text-input" class="form-control" type="text" placeholder="Nothing selected, select some text inside the tweet." aria-label="readonly input example" readonly></textarea>
                        </div>

                        <!-- Tweet Card -->
                        <div id="st-tweet-container" class="mb-2 col-lg-6 col-md-12"></div>

                        <!-- Classification Card -->
                        <div class="col-lg-6 mb-2 col-md-12">
                            <div class="card h-100">
                                <div class="card-body">

                                    <!-- Card Title and Subtitle -->
                                    <h5 class="card-title">Classification</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">Select the right classification for the selected text</h6>

                                    <!-- Classification Form -->
                                    <form id="st-classification-form">

                                        <!-- Positive Classification -->
                                        <input type="radio" class="btn-check" value="positive" name="st-radio-classification" id="st-positive-classification-check" autocomplete="off" checked>
                                        <label class="mb-2 btn btn-outline-primary" for="st-positive-classification-check"><i class="far fa-smile"></i> Positive</label>
                                        
                                        <!-- Negative Classification -->
                                        <input type="radio" class="btn-check" value="negative" name="st-radio-classification" id="st-negative-classification-check" autocomplete="off">
                                        <label class="mb-2 btn btn-outline-primary" for="st-negative-classification-check"><i class="far fa-frown"></i> Negative</label>

                                        <!-- Nature Classification -->
                                        <input type="radio" class="btn-check" value="nature" name="st-radio-classification" id="st-nature-classification-check" autocomplete="off">
                                        <label class="mb-2 btn btn-outline-primary" for="st-nature-classification-check"><i class="fas fa-tree"></i> Nature</label>

                                        <!-- Finance Classification -->
                                        <input type="radio" class="btn-check" value="finance" name="st-radio-classification" id="st-finance-classification-check" autocomplete="off">
                                        <label class="mb-2 btn btn-outline-primary" for="st-finance-classification-check"><i class="fas fa-wallet"></i> Finance</label>

                                        <!-- Politic Classification -->
                                        <input type="radio" class="btn-check" value="politic" name="st-radio-classification" id="st-politic-classification-check" autocomplete="off">
                                        <label class="mb-2 btn btn-outline-primary" for="st-politic-classification-check"><i class="fas fa-balance-scale"></i> Politic</label>
                                        
                                        <!-- Submit -->
                                        <div class="mb-2">
                                            <button type="submit" id="st-classification-form-submit-button" class="mb-2 btn btn-primary">Submit</button>
                                        </div>

                                    </form>
                                        
                                </div>
                            </div>
                        </div>

                        <!-- Skip Tweet Classification Button -->
                        <div class="col-12 mb-5 d-flex justify-content-center align-items-center">
                            <button type="button" id="st-skip-tweet-classification-button" class="btn btn-outline-primary"><i class="fas fa-forward"></i> Skip</button>
                        </div>

                    </div>
                </div>

                <!-- Guided Training Tab -->
                <div class="tab-pane fade" id="pills-guided-training" role="tabpanel" aria-labelledby="pills-guided-training-tab">Guided Training</div>

                <!-- Automatic Classification Tab -->
                <div class="tab-pane fade" id="pills-automatic-classification" role="tabpanel" aria-labelledby="pills-automatic-classification-tab">Automatic Classification</div>
            
            </div>
        </div>
    </div>
</div>

<!-- App Loading Screen -->
<div id="app-loading-screen" class="app-loader">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
</div>